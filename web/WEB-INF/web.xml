<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <display-name>Welcome to My Web App</display-name>
    <description> Welcome To My Web App</description>

    <servlet>
        <servlet-name>loginservlet</servlet-name>
        <servlet-class>swu.ml.design.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginservlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>validateCodeServlet</servlet-name>
        <servlet-class>swu.ml.design.ValidateCodeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>validateCodeServlet</servlet-name>
        <url-pattern>/validateCode</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addPlaceServlet</servlet-name>
        <servlet-class>swu.ml.design.AddPlaceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addPlaceServlet</servlet-name>
        <url-pattern>/MyNewApp/admin/addPlace</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listPlaceservlet</servlet-name>
        <servlet-class>swu.ml.design.ListPlaceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>listPlaceservlet</servlet-name>
        <url-pattern>/listPlace</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>swu.ml.design.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/MyNewApp/admin/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>charsetFilter</filter-name>
        <filter-class>swu.ml.design.CharsetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>charsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>